<!-- Full Width Image Header -->
<header class="header-image">
  <div class="headline">
    <div class="container-fluid">
      <h1 id="page_title">Rundown</h1>
      <h2 id="page_title">A photo diary for running.</h2>
      <br>
      <br>
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <div class="container-fluid">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#">SignIn</a></li>
              <li><%= link_to "SignUp", new_registration_path(resource_name), class: 'font_fix' %></li>
            </ul>
            <br>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-inputs">
                  <%= f.input :email, required: false, autofocus: true %>
                  <%= f.input :password, required: false %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                </div>
                <br>
                <div class="form-actions">
                  <%= f.button :submit, "Log in", class: 'btn btn-color3' %>
                  <br>
                  <br>
                  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot?", new_password_path(resource_name), class: 'font_fix' %><br />
                  <% end -%>
                  <br>
                </div>
                </div>
            <% end %>
            <div class="col-md-4"></div>
            </div>
      </div>
    </div>
  </div>
</header>
