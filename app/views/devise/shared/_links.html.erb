<br>
<div class="btn-group dropdown">
  <button type="button" class="btn btn-color1 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Login with an Account <span class="caret"></span>
  </button>
  <ul class="dropdown-menu">
    <li><a href="https://run-down.herokuapp.com/users/auth/twitter"><i class="fa fa-twitter" style="color:#1DA1F3;"></i> Twitter </a></li>
    <li role="separator" class="divider"></li>
    <li><a href="https://run-down.herokuapp.com/users/auth/facebook"><i class="fa fa-facebook" style="color:#3b5998;"></i> Facebook </a></li>
  </ul>
</div>
<br>
<br>
<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-color3' %>
<% end -%>
&nbsp;&nbsp;&nbsp;
<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: 'font_fix' %>
<% end -%>
&nbsp;&nbsp;&nbsp;
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot?", new_password_path(resource_name), class: 'font_fix' %>
<% end -%>
&nbsp;&nbsp;&nbsp;
<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Resend Confirmation", new_confirmation_path(resource_name), class: 'font_fix' %><br />
<% end -%>
<br>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-color3' %><br />
<% end -%>
<br>

