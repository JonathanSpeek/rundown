!!!
%html
%head
  %title RunDown
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  %nav.navbar.navbar-default
    .container
      .navbar-header
      = link_to 'RunDown', root_path, class: 'navbar-brand'
      .nav.navbar-nav.navbar-right
        = link_to 'Run', new_run_path, class: 'btn btn-primary glyphicon glyphicon-plus'

  .container
    = yield
